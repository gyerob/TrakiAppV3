<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:actionBarTabTextStyle">@style/MyABTabText</item>
        <item name="android:popupMenuStyle">@style/MyPopUp</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownList</item>
        <item name="android:actionMenuTextColor">@color/gold</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="MyABTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="MyABTabText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/green</item>
        <item name="android:titleTextStyle">@style/MyABTitleText</item>
    </style>

    <style name="MyActionBarTab" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_selector</item>
    </style>

    <style name="MyPopUp" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/green</item>
    </style>

    <style name="MyDropDownList" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/dropdown_selector</item>
    </style>

    <string name="textColor">#e6b121</string>

</resources>