<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    style="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bgportraitView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/land" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_b_l_selector"
        android:gravity="left|bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:text="@string/main_gallery"
        android:textColor="@color/gold" />

    <Button
        android:id="@+id/btnOut"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_t_l_selector"
        android:gravity="left|top"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="@string/main_output"
        android:textColor="@color/gold" />

    <Button
        android:id="@+id/btnFinals"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_t_r_selector"
        android:gravity="right|top"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:text="@string/main_finals"
        android:textColor="@color/gold" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_b_r_selector"
        android:gravity="right|bottom"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:text="@string/main_map"
        android:textColor="@color/gold" />

    <Button
        android:id="@+id/btnIn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_half_selector"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="@string/main_input"
        android:textColor="@color/gold" />

</RelativeLayout>