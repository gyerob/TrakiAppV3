<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/inputracerViewName"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/data_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/inputracerEditTown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inputracerViewTown"
            android:layout_alignBottom="@+id/inputracerViewTown"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/inputracerViewTown"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/black" >
        </EditText>

        <TextView
            android:id="@+id/inputracerViewTown"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/inputracerViewNumber"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/data_town"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/inputracerEditNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inputracerViewNumber"
            android:layout_alignBottom="@+id/inputracerViewNumber"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/inputracerViewNumber"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/inputracerEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inputracerViewName"
            android:layout_alignBottom="@+id/inputracerViewName"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/inputracerViewName"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/black" >
        </EditText>

        <TextView
            android:id="@+id/inputracerViewNumber"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/inputracerViewName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/data_number"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/inputracerSlalom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inputracerEditNumber"
            android:layout_alignBottom="@+id/inputracerEditNumber"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/inputracerEditNumber"
            android:button="@drawable/checkboxselector"
            android:text="@string/data_slalom"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/inputracerDrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inputracerEditTown"
            android:layout_alignBottom="@+id/inputracerEditTown"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/inputracerEditTown"
            android:button="@drawable/checkboxselector"
            android:text="@string/data_drag"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/inputracerTrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inputracerEditName"
            android:layout_alignBottom="@+id/inputracerEditName"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/inputracerEditName"
            android:button="@drawable/checkboxselector"
            android:text="@string/data_trailer"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/inputracerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputracerViewTown"
            android:layout_marginTop="24dp"
            android:text="@string/btn_save"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/inputracerbtndelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/inputracerbtnupdate"
            android:text="@string/btn_delete"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/inputracerbtnupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/inputracerbtn"
            android:text="@string/btn_update"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/myspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/inputracerDrag"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView1"
            android:background="@color/green"
            android:entries="@array/csoportnev" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myspinner"
            android:layout_below="@+id/inputracerDrag"
            android:layout_marginTop="10dp"
            android:text="Csoport"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

</ScrollView>